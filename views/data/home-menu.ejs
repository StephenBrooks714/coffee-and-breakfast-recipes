<section class="container my-5 py-5">
    <div class="row justify-content-center text-center">
        <% if(menu == "") { %>
            <div class="col-lg-3 hover-zoom col-md-6 col-sm-12 mb-3">
                <a href="">
                    <h4>Feature Title</h4>
                    <img src="https://www.wallpaperup.com/uploads/wallpapers/2013/06/04/97516/7fdd9bb3c96e9e4d963f1f4514ed5af9.jpg"
                         class="img-fluid img-max"
                         alt="feature title"
                    />
                </a>
            </div>
            <div class="col-lg-3 hover-zoom col-md-6 col-sm-12 mb-3">
                <a href="">
                    <h4>Feature Title</h4>
                    <img src="https://images5.alphacoders.com/343/thumb-1920-343424.jpg"
                         class="img-fluid img-max"
                         alt="feature title"
                    />
                </a>
            </div>
            <div class="col-lg-3 hover-zoom col-md-6 col-sm-12 mb-3">
                <a href="">
                    <h4>Feature Title</h4>
                    <img src="http://www.zastavki.com/pictures/originals/2013/Food___Drinks_Black_coffee_with_foam_041501_.jpg"
                         class="img-fluid img-max"
                         alt="feature title"
                    />
                </a>
            </div>
            <div class="col-lg-3 hover-zoom col-md-6 col-sm-12 mb-3">
                <a href="">
                    <h4>Feature Title</h4>
                    <img src="https://images6.alphacoders.com/390/390365.jpg"
                         class="img-fluid img-max"
                         alt="feature title"
                    />
                </a>
            </div>
        <% } else { %>
            <div class="row mb-5">
                <div class="col-md-6 text-start">
                    <p class="h2 fw-light section-title">Menu Items</p>
                </div>
                <div class="col-md-6 text-end">
                    <a href="/menu" class="lead fw-bold text-decoration-underline">Full Menu <i class="fas fa-circle-chevron-right"></i></a>
                </div>
            </div>
            <% for(i=0; i < menu.length; i++) { %>
                    <div class="col-lg-3 hover-zoom col-md-6 col-sm-12 mb-3">
                        <a href="/singleMenu/<%= menu[i]._id %>">
                            <h4><%= menu[i].title %></h4>
                            <img src="<%= menu[i].image %>"
                                 class="img-fluid img-max"
                                 alt="<%= menu[i].title %>"
                            />
                        </a>
                    </div>
            <% } %>
        <% } %>
    </div>
</section>