<div class="banner">
    <div class="container-fluid">
        <div class="row text-center p-5 justify-content-center">
            <div class="col-lg-8 col-md-10">
                <h4 class="display-4 fw-bold mb-4 text-white">Subscribe to our mailer</h4>
                <form action="/send/subscription" method="post" enctype="multipart/form-data">
                    <input type="email" name="from" id="email" placeholder="Your Email" required class="form-control mb-3" />
                    <button class="btn btn-outline-light" type="submit">subscribe <i class="fas fa-mug-hot"></i></button>
                </form>
                <script>
                    let form = document.getElementsByTagName("form")[0];
                    form.addEventListener("submit", () => {
                        alert("You were added to our subscriber's list!!!");
                    });
                </script>
            </div>
        </div>
    </div>
</div>